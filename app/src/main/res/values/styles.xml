<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Style for the activity_store -->
    <style name="floating_action">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="empty_title_text">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="empty_subtitle_text">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">#A2AAB0</item>
    </style>
    <!-- Style for the list item -->
    <style name="linear_main">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/activity_margin</item>
    </style>

    <style name="linear_inside">
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_name">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">#2B3D4D</item>
    </style>

    <style name="text_price">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">#616161</item>
    </style>

    <style name="text_quantity">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">#757575</item>
    </style>
    <!-- Style for buttons -->
    <style name="general_button">
        <item name="android:padding">12dp</item>
        <item name="android:background">#1A237E</item>
        <item name="android:textColor">#E8EAF6</item>
    </style>
    <!-- Style for an EditText field in the editor -->
    <style name="EditorFieldStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <!-- Theme of the editor -->
    <style name="EditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/editorColorPrimary</item>
        <item name="colorPrimaryDark">@color/editorColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Detail Activity -->
    <style name="image_detail">
        <item name="android:layout_margin">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="text_title_one">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_title_two">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="detail_button">
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">#1A237E</item>
        <item name="android:textColor">#E8EAF6</item>
    </style>
</resources>